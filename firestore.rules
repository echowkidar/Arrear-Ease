
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == "amulivealigarh@gmail.com";
    }

    match /users/{userId} {
      // A user can manage their own document. The admin can manage any document.
      allow get, update, create: if request.auth.uid == userId || isAdmin();
      
      // The admin can list and delete users.
      allow list, delete: if isAdmin();
    }
    
    match /configurations/{docId} {
      // Any authenticated user can read configurations.
      allow get: if request.auth != null;
      // Only the admin can write configurations.
      allow write: if isAdmin();
    }
  }
}
