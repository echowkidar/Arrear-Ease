rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'amulivealigarh@gmail.com';
    }

    match /users/{userId} {
      allow read, write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
    }

    match /savedStatements/{statementId} {
      allow read, write: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.userId);
    }

    match /configurations/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
