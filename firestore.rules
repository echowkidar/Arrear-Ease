
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Users can only create, read, and update their own user document
      allow create, read, update: if request.auth != null && request.auth.uid == userId;
      
      // Admin can list all users for the management page
      allow list: if request.auth != null && request.auth.token.email == 'amulivealigarh@gmail.com';
    }

    match /savedStatements/{statementId} {
      // Users can manage their own statements
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Admin can read all statements
      allow list: if request.auth != null && request.auth.token.email == 'amulivealigarh@gmail.com';
    }
    
    match /configurations/{document} {
      // Any authenticated user can read rates for the calculator to work
      allow read: if request.auth != null;
      
      // Only admin can change the rates
      allow write: if request.auth != null && request.auth.token.email == 'amulivealigarh@gmail.com';
    }
  }
}
