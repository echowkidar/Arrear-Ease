rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'amulivealigarh@gmail.com';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Admin-only access for rate configurations
    match /configurations/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Rules for user profiles
    match /users/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow list: if isAdmin();
    }

    // Rules for saved arrear statements
    match /savedStatements/{statementId} {
      // Admin can do anything
      allow read, write, delete: if isAdmin();
      
      // Users can manage their own statements
      allow create, read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
