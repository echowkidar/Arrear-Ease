
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Admin can read and list all users.
      allow read, list: if request.auth != null && request.auth.token.email == "amulivealigarh@gmail.com";
      
      // A user can create their own document, and can read/update it.
      // They can only read/update their own document, not others (unless they are admin).
      allow create, read, update: if request.auth != null && request.auth.uid == userId;
    }

    match /savedStatements/{statementId} {
      allow read, list, create, update, delete: if request.auth != null && (request.auth.token.email == "amulivealigarh@gmail.com" || request.auth.uid == resource.data.userId);
    }
    
    match /configurations/{docId} {
      // Anyone authenticated can read
      allow read: if request.auth != null;
      // Only admin can write
      allow write: if request.auth != null && request.auth.token.email == "amulivealigarh@gmail.com";
    }
  }
}
