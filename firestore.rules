
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }
    
    match /savedStatements/{statementId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Protect rate configuration
    match /configurations/{docId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.token.email == "amulivealigarh@gmail.com";
    }
  }
}
