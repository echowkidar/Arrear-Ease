
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /configurations/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'amulivealigarh@gmail.com';
    }

    match /savedStatements/{statementId} {
      allow read: if request.auth.uid == resource.data.userId || request.auth.token.email == 'amulivealigarh@gmail.com';
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.token.email == 'amulivealigarh@gmail.com';
    }
  }
}
