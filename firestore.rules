
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return request.auth.token.email == 'amulivealigarh@gmail.com';
    }

    match /users/{userId} {
      // Admin can do anything.
      // A user can create their own profile, and read/update it.
      allow read, write: if isAdmin() || (request.auth.uid == userId && (request.method == 'create' || request.method == 'get' || request.method == 'update'));
    }

    match /savedStatements/{statementId} {
      // Admin can do anything.
      // A user can read/write their own statements.
      allow read, write: if isAdmin() || request.auth.uid == resource.data.userId;
    }
    
    match /configurations/{docId} {
      // Any authenticated user can read rates.
      // Only admin can write rates.
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
    }
  }
}
